<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".MainActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:background="@mipmap/bg_main_test"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="46dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                <ImageView
                        android:src="@mipmap/image_demo"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/avatar" />

                <TextView
                        android:textSize="20sp"
                        android:textColor="#2D2F33"
                        android:layout_marginStart="12dp"
                        android:text="@string/test_text_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="72sp"
                    android:textColor="#2D2F33"
                    android:letterSpacing="0"
                    android:layout_marginStart="12dp"
                    android:text="@string/test_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="#929292"
                    android:letterSpacing="0"
                    android:layout_marginStart="12dp"
                    android:text="@string/test_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <View
                    android:layout_marginTop="34dp"
                    android:background="#F2F2F2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="1dp" />

            <View
                    android:layout_marginTop="144dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#F2F2F2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
        </LinearLayout>

        <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="238dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.example.testapp.CustomView
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="400"
                    app:cus_progress="86"
                    app:cus_emotion_img="@mipmap/ic_smile"
                    app:cus_background="@drawable/progressbar_ver"
                    app:cus_weekend="六"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <com.example.testapp.CustomView
                    android:id="@+id/cus_view_of_sunday"
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="500"
                    app:cus_progress="80"
                    app:cus_emotion_img="@mipmap/ic_smile"
                    app:cus_background="@drawable/progressbar_ver"
                    app:cus_weekend="日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.example.testapp.CustomView
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="600"
                    app:cus_progress="-1"
                    app:cus_emotion_img="@mipmap/ic_unknown"
                    app:cus_background="@drawable/progressbar_ver_gray"
                    app:cus_weekend="一"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.example.testapp.CustomView
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="700"
                    app:cus_progress="90"
                    app:cus_emotion_img="@mipmap/ic_orange_smile"
                    app:cus_background="@drawable/progressbar_ver_orange"
                    app:cus_weekend="二"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.example.testapp.CustomView
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="800"
                    app:cus_progress="92"
                    app:cus_emotion_img="@mipmap/ic_orange_smile"
                    app:cus_background="@drawable/progressbar_ver_orange"
                    app:cus_weekend="三"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.example.testapp.CustomView
                    android:id="@+id/cus_view_of_four"
                    app:cus_is_current_day="false"
                    app:cus_animation_duration="1000"
                    app:cus_progress="97"
                    app:cus_emotion_img="@mipmap/ic_orange_smile"
                    app:cus_background="@drawable/progressbar_ver_orange"
                    app:cus_weekend="四"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <com.example.testapp.CustomView
                    app:cus_is_current_day="true"
                    app:cus_animation_duration="1100"
                    app:cus_progress="81"
                    app:cus_emotion_img="@mipmap/ic_smile"
                    app:cus_background="@drawable/progressbar_ver"
                    app:cus_weekend="五"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>